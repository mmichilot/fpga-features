{
    "name": "OSS CAD Suite",
    "id": "oss-cad-suite",
    "version": "1.0.1",
    "description": "A collection of open source software used for digital logic design",
    "options": {
        "autoActivate": {
            "type": "boolean",
            "default": false,
            "description": "Activate the OSS CAD Suite environment on login."
        }
    },
    "containerEnv": {
        "SUITE_DIR": "/usr/local/oss-cad-suite"
    },
    "dependsOn": {
        "ghcr.io/devcontainers/features/common-utils:2": {}
    },
    "postStartCommand": ["/bin/bash", "-c", "${SUITE_DIR}/start.sh"]
}
